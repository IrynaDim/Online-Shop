<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.internet.shop.controllers.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectData</servlet-name>
        <servlet-class>com.internet.shop.controllers.InjectDataController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>injectData</servlet-name>
        <url-pattern>/injectData</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.internet.shop.controllers.RegistrationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/users/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>com.internet.shop.controllers.AddProductAdminController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userDelete</servlet-name>
        <servlet-class>com.internet.shop.controllers.DeleteUsersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userDelete</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetAllUsersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/users/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allProducts</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetAllProductsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allProducts</servlet-name>
        <url-pattern>/products/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UsersShoppingCart</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetCartProductsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UsersShoppingCart</servlet-name>
        <url-pattern>/shopping-cart/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addToCart</servlet-name>
        <servlet-class>com.internet.shop.controllers.AddProductToCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addToCart</servlet-name>
        <url-pattern>/shopping-cart/products/add</url-pattern>
    </servlet-mapping>














    <servlet>
        <servlet-name>allProductsAdmin</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetAllProductsAdminController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allProductsAdmin</servlet-name>
        <url-pattern>/products/all-admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productsDeleteAdmin</servlet-name>
        <servlet-class>com.internet.shop.controllers.DeleteProductController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productsDeleteAdmin</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartDeleteProduct</servlet-name>
        <servlet-class>com.internet.shop.controllers.DeleteProductFromCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cartDeleteProduct</servlet-name>
        <url-pattern>/shopping-cart/product/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>completeOrder</servlet-name>
        <servlet-class>com.internet.shop.controllers.CompleteOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>completeOrder</servlet-name>
        <url-pattern>/orders/complete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allOrders</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetAllUserOrdersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allOrders</servlet-name>
        <url-pattern>/orders/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderDetails</servlet-name>
        <servlet-class>com.internet.shop.controllers.GerOrderDetailController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderDetails</servlet-name>
        <url-pattern>/orders/all/details</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allOrdersAdmin</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetAllOrdersAdminController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allOrdersAdmin</servlet-name>
        <url-pattern>/orders/all-admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteOrdersAdmin</servlet-name>
        <servlet-class>com.internet.shop.controllers.DeleteOrderAdminController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteOrdersAdmin</servlet-name>
        <url-pattern>/orders/delete</url-pattern>
    </servlet-mapping>

</web-app>
